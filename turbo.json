{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ],
      "env": [
        "CLIENT_ORIGIN",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "migrate": {
      "outputs": [
        "migrations/**"
      ]
    },
    "push": {
      "outputs": [
        "migrations/**"
      ]
    }
  }
}
